<?xml version="1.0" encoding="utf-8"?>
<com.testapptwo.utils.android.views.ForegroundRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/photo_item_padding"
    app:foreground="@drawable/selection_drawable">

    <ImageView
        android:id="@+id/image_view"
        android:layout_width="@dimen/photo_image_view_size"
        android:layout_height="@dimen/photo_image_view_size"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/tv_time"
        android:textSize="@dimen/default_text_size"
        android:textColor="?android:attr/textColorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center_horizontal"
        android:layout_below="@id/image_view"/>

</com.testapptwo.utils.android.views.ForegroundRelativeLayout>